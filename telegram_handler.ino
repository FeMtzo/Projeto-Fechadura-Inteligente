// --- Configura Wi-Fi e Telegram ---
void setupTelegram() {
  esp_log_level_set("wifi", ESP_LOG_NONE);
  WiFi.mode(WIFI_STA);
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);

  secured_client.setInsecure();
  secured_client.setTimeout(20000);

  // N√£o vai mais travar esperando, apenas inicia a conex√£o
}

// --- Verifica estado do WiFi continuamente no loop ---
void checkWiFi() {
  static bool wifiOk = false;
  static bool timeSynced = false;

  if (WiFi.status() == WL_CONNECTED) {
    if (!wifiOk) {
      Serial.println("\nWiFi conectado!");
      sendTelegramBotStart(); 
      wifiOk = true;
    }
    

    if (!timeSynced) {
      // Sincroniza hora s√≥ uma vez
      configTime(0, 0, "pool.ntp.org");
      time_t now = time(nullptr);
      if (now > 24 * 3600) {
        Serial.println("Hora sincronizada!");
        timeSynced = true;
      }
    }
  } else {
    if (wifiOk) {
      Serial.println("‚ö†Ô∏è WiFi caiu!");
    }
    wifiOk = false;
    timeSynced = false;

    // tenta reconectar a cada WIFI_RETRY_INTERVAL ms
    if (millis() - lastWifiAttempt >= WIFI_RETRY_INTERVAL) {
      lastWifiAttempt = millis();
      WiFi.disconnect();
      WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
    }
  }
}


